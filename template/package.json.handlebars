{
	"name": "{{repoName}}",
	"version": "0.1.0",
	"description": "The mono-repo for {{libName}}, {{libName}}-cli, {{libName}}-ui and {{libName}}-uis",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MYNAME/{{repoName}}.git"
	},
	"homepage": "https://MYNAME.github.io/{{repoName}}/",
	"author": "MYNAME",
	"license": "ISC",
	"keywords": [
		"parametrix",
		"3D",
		"CAD"
	],
	"type": "module",
	"workspaces": [
		"pkg/*"
	],
	"scripts": {
		"{{libName}}:dev": "npm -w {{libName}} run dev",
		"{{libName}}:ci": "npm -w {{libName}} run ci",
		"{{libName}}:svgo": "npm -w {{libName}} run svgo",
		"{{libName}}:clean": "npm -w {{libName}} run clean",
		"{{libName}}:version": "npm -w {{libName}} version patch",
		"{{libName}}:publish": "npm -w {{libName}} publish --provenance",
		"{{libName}}-ui:dev": "npm -w desiXY-ui run dev",
		"{{libName}}-ui:ci": "npm -w desiXY-ui run ci",
		"{{libName}}-ui:clean": "npm -w desiXY-ui run clean",
		"{{libName}}-ui:preview": "npm -w desiXY-ui run preview",
		"{{libName}}-cli:ci": "npm -w {{libName}}-cli run ci",
		"{{libName}}-cli:run": "npm -w {{libName}}-cli run run",
		"{{libName}}-cli:clean": "npm -w {{libName}}-cli run clean",
		"{{libName}}-cli:version": "npm -w {{libName}}-cli version patch",
		"{{libName}}-cli:publish": "npm -w {{libName}}-cli publish --provenance",
		"{{libName}}-uis:ci": "npm -w {{libName}}-uis run ci",
		"{{libName}}-uis:copy_public": "npm -w {{libName}}-uis run copy_public",
		"{{libName}}-uis:run": "npm -w {{libName}}-uis run run",
		"{{libName}}-uis:clean": "npm -w {{libName}}-uis run clean",
		"{{libName}}-uis:version": "npm -w {{libName}}-uis version patch",
		"{{libName}}-uis:publish": "npm -w {{libName}}-uis publish --provenance",
		"dev": "run-p {{libName}}:dev desiXY-ui:dev",
		"ci": "run-s {{libName}}:ci desiXY-ui:ci desiXY-cli:ci desiXY-uis:ci desiXY-uis:copy_public",
		"svgo": "run-s {{libName}}:svgo",
		"clean-root": "shx rm -fr tmp output output2",
		"clean": "run-s clean-root clean_patch {{libName}}:clean paxScr:clean desiXY-ui:clean desiXY-cli:clean desiXY-uis:clean",
		"preview": "run-s desiXY-ui:preview",
		"run-uis": "run-s desiXY-uis:run",
		"run-cli": "run-s desiXY-cli:run",
		"versions": "run-s {{libName}}:version desiXY-cli:version desiXY-uis:version",
		"gh-publish": "run-s {{libName}}:publish desiXY-cli:publish desiXY-uis:publish",
		"ls-workspaces": "npm -ws exec -c pwd"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5",
		"shx": "^0.3.4"
	}
}
